{% if settings.font_type == 'google_fonts' %}

{% assign fonts_1 = false %}
{% if settings.fonts_name_1 != blank %}
{% assign fonts_1 = true %}
{% endif %}

{% assign fonts_2 = false %}
{% if settings.fonts_name_2 != blank %}
{% assign fonts_2 = true %}
{% endif %}

{% assign fonts_3 = false %}
{% if settings.fonts_name_3 != blank %}
{% assign fonts_3 = true %}
{% endif %}

{% assign fonts_4 = false %}
{% if settings.fonts_name_4 != blank %}
{% assign fonts_4 = true %}
{% endif %}

<script type="text/javascript">
  WebFontConfig = {
    google: { families: [ 
      {% if fonts_1 %}
        '{{ settings.fonts_name_1 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_2 %}
      	{% if fonts_1 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_2 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_3 %}
      	{% if fonts_1 or fonts_2 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_3 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_4 %}
      	{% if fonts_1 or fonts_2 or fonts_3 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_4 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_5 %}
      	{% if fonts_1 or fonts_2 or fonts_3 or fonts_4 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_5 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_6 %}
      	{% if fonts_1 or fonts_2 or fonts_3 or fonts_4 or fonts_5 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_6 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_7 %}
      	{% if fonts_1 or fonts_2 or fonts_3 or fonts_4 or fonts_5 or fonts_6 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_7 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_8 %}
      	{% if fonts_1 or fonts_2 or fonts_3 or fonts_4 or fonts_5 or fonts_6 or fonts_7 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_8 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
      
      {% if fonts_9 %}
      	{% if fonts_1 or fonts_2 or fonts_3 or fonts_4 or fonts_5 or fonts_6 or fonts_7 or fonts_8 %}
      		,
      	{% endif %}      
        '{{ settings.fonts_name_9 }}:100,200,300,400,500,600,700,800,900'
	  {% endif %}
    ] }
  };
  (function() {
    var wf = document.createElement('script');
    wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
      '://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
    wf.type = 'text/javascript';
    wf.async = 'true';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(wf, s);
  })(); 
</script>
{% else %}
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Poiret+One" rel="stylesheet">
{% endif %}