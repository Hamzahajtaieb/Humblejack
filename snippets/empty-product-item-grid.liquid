<div class="item-product item-product1 text-center">
  <div class="wrap-item-product">
    <span class="sale-item">sale</span>
    <div class="product-thumb mid">
      <a href="/admin/products">
        {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
        {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
      </a>
      <a href="/admin/products" class="quickview-link"><i class="fas fa-eye"></i></a>
      <div class="product-extra-link clearfix">
        <a href="/admin/products" class="addcart-link pull-left"><span>Add to cart</span></a>
        <a href="/admin/products" class="wishlist-link pull-right"><i class="far fa-heart"></i></a>
      </div>
    </div>
    <div class="product-info">
      <span class="title10 text-uppercase">Type</span>
      <h3 class="title14 font-bold"><a href="/admin/products" class="link-hover">Example Product</a></h3>
      <div class="product-price">
        <del>$96.00</del>
        <ins class="font-bold color">$69.00</ins>
      </div>
      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      <div class="thumb-carousel thumb-carousel-product text-center">
        <div class="carousel-product">
          <ul class="list-inline">
            {% for i in (1..3) %}
            <li class="{% if i == 1 %}active{% endif %}">
              <a href="#">
                {% capture current %}{% cycle 1, 3, 5 %}{% endcapture %}
                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </div>  
      </div>
    </div>
  </div>
</div>