      "label": "Heading",
      "default": "Holiday this way sale"
    },
    {
      "type": "text",
      "id": "block_content1",
      "label": "Content sale 1",
      "default": "up"
    },
    {
      "type": "text",
      "id": "block_content2",
      "label": "Content sale 2",
      "default": "to"
    },
    {
      "type": "text",
      "id": "block_content3",
      "label": "Content sale 3",
      "default": "50"
    },
    {
      "type": "text",
      "id": "block_content4",
      "label": "Content sale 4",
      "default": "%"
    },
    {
      "type": "text",
      "id": "block_content5",
      "label": "Content sale 5",
      "default": "off"
    },
    {
      "type": "text",
      "id": "block_des",
      "label": "Description",
      "default": "Accessories store"
    },
    {
      "type": "text",
      "id": "block_btn_name",
      "label": "Button name",
