<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="banner-sale">
      <div class="thumb-banner zoom-image">
        <a href="{{section.settings.block_url}}" class="advs-thumb-link">
          {% if section.settings.block_img != blank %}
          <img src="{{section.settings.block_img|img_url:'master'}}" alt="banner" />
          {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </a>
      </div> 
      <div class="info-banner">
        {% if section.settings.block_heading != blank %}
        <h3 class="title30 text-uppercase text-italic font-bold rale-font">{{section.settings.block_heading}}</h3>
        {% endif %}
        
        {% if section.settings.block_content1 != blank or section.settings.block_content2 != blank or section.settings.block_content3 != blank or section.settings.block_content4 != blank or section.settings.block_content5 != blank %}
        <h2 class="title120 text-uppercase font-bold"><span class="title30 font-bold color upto">{{section.settings.block_content1}}<br> {{section.settings.block_content2}}</span>{{section.settings.block_content3}} <span class="title60 font-bold color">{{section.settings.block_content4}}</span><span class="title30 font-bold color text-off">{{section.settings.block_content5}}</span></h2>
        {% endif %}
        
        {% if section.settings.block_des != blank %}
        <h3 class="title18 text-uppercase rale-font font-bold">{{section.settings.block_des}}</h3>
        {% endif %}
        
        {% if section.settings.block_btn_name != blank %}
        <a href="{{section.settings.block_url}}" class="hover-btn shop-button bg-color white">{{section.settings.block_btn_name}}</a>
        {% endif %}
        
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner v4",
  "class": "index-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "block_img",
