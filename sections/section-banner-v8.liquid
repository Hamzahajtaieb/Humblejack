<div data-section-id="{{ section.id }}" data-section-type="section-banner-v8" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="banner-advs banner-advs5">
      <div class="row">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "banner" %}
        <div class="col-md-6 col-sm-6">
          <div class="item-advs">
            <div class="advs-thumb advs-thumb-left zoom-rotate overlay-image">
              <a href="{{block.settings.block_url}}" class="advs-thumb-link">
                {% if block.settings.block_img != blank %}
                {{ block.settings.block_img | img_url:'master' | img_tag: block.settings.block_sub_heading, 'img-responsive' }}
                {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>
            </div>
            <div class="advs-info advs-info-right text-center">
              <div class="title-box title-text-bg">
                {% if block.settings.block_heading != blank %}
                <h3 class="title12 text-uppercase">{{block.settings.block_heading}}</h3>
                {% endif %}

                {% if block.settings.block_sub_heading != blank %}
                <h2 class="title30 text-uppercase rale-font"><span>{{block.settings.block_sub_heading}}</span></h2>
                {% endif %}

                {% if block.settings.block_des != blank %}
                <h3 class="title14 text-uppercase font-bold">{{block.settings.block_des}}</h3>
                {% endif %}

                {% if block.settings.block_sub_heading != blank %}
                <h3 class="title240 rale-font text-uppercase">{{block.settings.block_sub_heading | split:'' | first}}</h3>
                {% endif %}

              </div>
              <p class="desc">{{block.settings.block_content}}</p>
              <a href="{{block.settings.block_url}}" class="shop-button bg-color white hover-btn">{{block.settings.block_btn_name}}</a>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner v8",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_img",
          "label": "Image",
          "info": "600 x 500px recommended"
        },
        {
          "type": "url",
          "id": "block_url",
          "label": "URL",
          "default": "/collections/all"
        },
        {
          "type": "text",
          "id": "block_heading",
          "label": "Heading",
          "default": "m o l t e s t o r e"
        },
        {
          "type": "text",
          "id": "block_sub_heading",
          "label": "Sub heading",
          "default": "SHOES"
        },
        {
          "type": "text",
          "id": "block_des",
          "label": "Description",
          "default": "NEW COLLECTION"
        },
        {
          "type": "text",
          "id": "block_content",
          "label": "Content",
          "default": "Discover fashion bags for ladies online by Molte Store. Find fashion shoes of high quality by filtering according to your needs!"
        },
        {
          "type": "text",
          "id": "block_btn_name",
          "label": "Button name",
          "default": "shop now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner v8",
      "category": "Image",
      "blocks": [
        {
          "type": "banner",
          "settings": {
          }
        },
        {
          "type": "banner",
          "settings": {
          }
        }
      ]
    }
  ]
}
{% endschema %}

