<section>
  <div class="content-page"> 
    <div class="container">
      <div class="main-content-page">
        <div class="content-about">
          {% if section.settings.enable_section_banner %}
          <div class="banner-advs12 banner-glasses about-banner zoom-image">
            <a href="{{section.settings.s_banner_url}}" class="advs-thumb-link">
              {% if section.settings.s_banner_img != blank %}
              <img src="{{section.settings.s_banner_img|img_url:'master'}}" alt="" />
              {% else %}
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>
          </div>
          {% endif %}
          {% if section.settings.enable_section_info %}
          <h2 class="title-page title30 text-uppercase rale-font font-bold">{{section.settings.s_info_title}}</h2>
          <div class="text-desc-about">
            <div class="row">
              <div class="col-sm-6">
                <p class="desc text-left text-justify">{{section.settings.s_info_content1}}</p>
              </div>
              <div class="col-sm-6">
                {{section.settings.s_info_content2}}
              </div>
            </div>
          </div>
          {% endif %}
          {% if section.settings.enable_section_blog %}
          <div class="about-blog">
            {%- assign posts_limit = section.settings.s_blog_limit -%}
            {%- assign blog_selected = section.settings.s_select_blog -%}
            
            <div class="row">
              {% for article in blogs[blog_selected].articles limit: posts_limit %}
                <div class="col-sm-4">
                  <div class="item-about-blog">
                    <div class="thumb-box zoom-image">
                      <a href="{{ article.url }}" class="advs-thumb-link"><img src="{{ article.image.src | img_url: 'master' }}" alt="{{ article.title }}" /></a>
                    </div>
                    <div class="info-box">
                      <h3 class="title14 rale-font text-uppercase font-bold">{{ blog.title }}</h3>
                      <h2 class="title30 text-uppercase font-bold"><a href="{{ article.url }}" class="color link-hover">{{ article.title }}</a></h2>
                      <p class="desc">{{ article.content | strip_html | truncate: 96 }}</p>
                      <a href="{{ article.url }}" class="link-hover text-uppercase font-bold">{{'blogs.article.read_more'|t}}</a>
                    </div>
                  </div>
                </div>
              {% else %}
                {% for i in (1..3) %}
                <div class="col-sm-4">
                  <div class="item-about-blog">
                    <div class="thumb-box zoom-image">
                      <a href="/admin/articles" class="advs-thumb-link">
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                      </a>
                    </div>
                    <div class="info-box">
                      <h3 class="title14 rale-font text-uppercase font-bold">News</h3>
                      <h2 class="title30 text-uppercase font-bold"><a href="/admin/articles" class="color link-hover">Example blog post</a></h2>
                      <p class="desc">Your store hasnâ€™t published any blog posts yet. Blogging is a great way to build your audience and generate more traffic and sales for your business.</p>
                      <a href="/admin/articles" class="link-hover text-uppercase font-bold">{{'blogs.article.read_more'|t}}</a>
                    </div>
                  </div>
                </div>
                {% endfor %}
              {% endfor %}
            </div>
          </div>
          {% endif %}
          {% if section.settings.enable_section_progress %}
          <div class="box-has-progress">
            <div class="row">
              <div class="col-md-5 col-sm-6">
                <div class="info-box">
                  <h3 class="title14 text-uppercase font-bold">{{section.settings.s_progress_sub_heading}}</h3>
                  <h2 class="title30 font-bold color text-uppercase">{{section.settings.s_progress_heading}}</h2>
                  <p class="desc">{{section.settings.s_progress_content}}</p>
                </div>
              </div>
              <div class="col-md-7 col-sm-6">
                <div class="main-box">
                  {% if section.blocks.size > 0 %}
                  {% for block in section.blocks %}
                  {% if block.type == "progress" %}
                  <div class="item-progress">
                    <div class="title-progress">
                      <h3 class="title14 text-italic pull-left">{{block.settings.b_progress_title}}</h3>
                      <span class="pull-right text-italic">{{block.settings.b_progress_bar}}%</span>
                    </div>
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" aria-valuenow="{{block.settings.b_progress_bar}}" aria-valuemin="0" aria-valuemax="100" style="width:{{block.settings.b_progress_bar}}%"></div>
                    </div>
                  </div>
                  {% endif %}
                  {% endfor %}
                  {% endif %}
                  
                </div>
              </div>
            </div>
          </div>
          {% endif %}
          {% if section.settings.enable_section_testimonial %}
          <div class="box-customers box-customers11 about-customer">
            <div class="title-box-type3 text-center">
              <h3 class="title14 text-uppercase rale-font font-bold">{{section.settings.s_testimonial_title}}</h3>
              <h2 class="title30 text-uppercase rale-font font-bold color">{{section.settings.s_testimonial_des}}</h2>
            </div>
            <div class="content-box">
              <div class="wrap-item" data-pagination="false" data-autoplay="false" data-transition="fade" data-navigation="true" data-itemscustom="[[0,1],[560,2],[1200,2]]">

                {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                {% if block.type == "testimonial" %}
                <div class="item-customer item-customer11">
                  <p class="desc text-italic title18">{{block.settings.b_testimonial_content}}</p>
                  <div class="box-avatar text-center">
                    <div class="wrap-thumb">
                      <div class="thumb-box">
                        <a href="{{block.settings.b_testimonial_url}}" class="advs-thumb-link">
                          {% if block.settings.b_testimonial_img != blank %}
                          <img src="{{block.settings.b_testimonial_img|img_url:'master'}}" alt="" />
                          {% else %}
                          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          {% endif %}
                        </a>
                      </div>
                    </div>
                    <div class="info-box">
                      <h3 class="title18 font-bold"><a href="{{block.settings.b_testimonial_url}}" class="link-hover">{{block.settings.b_testimonial_title}}</a></h3>
                      <p class="desc silver">{{block.settings.b_testimonial_des}}</p>
                    </div>
                  </div>
                </div>
                {% endif %}
                {% endfor %}
                {% endif %}
              </div>
            </div>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

