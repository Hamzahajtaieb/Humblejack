<div data-section-id="{{ section.id }}" data-section-type="section-brand-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="container">
    <div class="logo-brands text-center">
      <ul class="list-inline-block">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "brand" %}
        <li class="zoom-image">
          <a href="{{block.settings.block_url}}" class="advs-thumb-link" style="max-width: 150px;">
            {% if block.settings.block_img != blank %}
            {{ block.settings.block_img | img_url:'master' | img_tag: block.settings.block_sub_heading, 'img-responsive' }}
            {% else %}
            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </a>
        </li>
        {% endif %}
        {% endfor %}
        {% endif %}
      </ul>
    </div>
  </div>
</div>

